                <div class="col-lg-4 col-sm-12 col-md-4 col-xs-12">
                   

                    @Html.LabelFor(m => m.ProductList)
                    @Html.DropDownList("productid", Model.ProductList.Select(d => new SelectListItem() { Value = d.ParentProductId.ToString(), Text = d.ProductName }), "SearchProduct", new { @id = "productid" })


                </div>
                <div class="col-lg-4 col-sm-12 col-md-4 col-xs-12">
                    @Html.LabelFor(m => m.BuyerList)
                    @Html.DropDownList("buyerName", Model.BuyerList.Select(d => new SelectListItem() { Value = d.BuyerName, Text = d.BuyerName }), "All", new { @id = "buyerName" })
                </div>
                <div class="col-lg-4 col-sm-12 col-md-4 col-xs-12">
                    @Html.LabelFor(m => m.WebsiteList)
                    @Html.DropDownList("websiteName", Model.WebsiteList.Select(d => new SelectListItem() { Value = d.WebsiteName, Text = d.WebsiteName }), "All", new { @id = "websiteName" })
                </div>
                <div class="clearfix"></div>
            </div>

            

            <div class="clearfix"></div>
            <div>
                <div class="col-lg-4 col-sm-12 col-md-4 col-xs-12">
                    @Html.LabelFor(m => m.LeadStatus)<br />

                    @Html.DropDownList("LeadStatus", Model.LeadStatus.Select(d => new SelectListItem() { Value = d.LeadStatusName, Text = d.LeadStatusName }), "All", new { @id = "LeadStatus" })



                </div>
                <div class="col-lg-4 col-sm-12 col-md-4 col-xs-12">

                    <span>Search By LeadId:</span><br />
                    @Html.TextBox("leadId")
                    @*<input id="leadId" type="text" name="leadId" />*@
                </div>

                <div class="col-lg-4 col-sm-12 col-md-4 col-xs-12">
                    <span>Search By email:</span><br />
                    @Html.TextBox("email")
                </div>
                @*<input id="email" type="text" name="email" />*@

                <div class="clearfix"></div>
            </div>

            <div class="clearfix"></div>
            <div>
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    <span>Home Phone</span><br />
                    @Html.TextBox("homePhone")
                    @*<input id="homePhone" type="text" name="homePhone" />*@
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    <span>Work Phone</span><br />
                    @Html.TextBox("workPhone")
                    @*<input id="workPhone" type="text" name="workPhone" />*@
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    <span>Search By Name</span><br />
                    @Html.TextBox("fullName")

                    @*<input id="fullName" type="text" name="fullName" />*@
                </div>
                <div class="clearfix"></div>
            </div>

            <div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <span>Transfer From-To(MM-DD-YYYY)</span><br />
                    @Html.TextBox("trnsfrStart")
                    @Html.TextBox("trnsfrEnd")

                    @*<input id="trnsfrStart" type="date"  name="trnsfrStart" />
                        <input id="trnsfrEnd" type="date"  name="trnsfrEnd"/>*@
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <span>Commonlead created From-To (MM-DD-YYYY)</span><br />

                    @Html.TextBox("startDate")
                    @Html.TextBox("endDate")

                    @*<input id="startDate" type="date" name="startDate" />*@
                    @*<input id="endDate" type="date" name="endDate"/>*@



                </div>

                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>


            <div>
                <input type="submit" value="Search" />

                <input type="button" value="Reset" onclick="test()" />



            </div>

            <div class="clearfix"></div>
        }
    </div>
