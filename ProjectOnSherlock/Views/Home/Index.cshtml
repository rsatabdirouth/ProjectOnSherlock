
@model ProjectOnSherlock.ViewModels.Dashboard
<div class="container">

    PageNO:<input type="text" id=""/>
    <div style="height:350px; overflow:scroll;">
        <table id="MyTable" class="table table-striped">
            <thead>
                <tr>
                    <th>commonleadID</th>
                    <th>Website</th>
                    @*@<th onclick="orderbyname(sortColumnName)">FullName</th>*@*@
                    <th>FullName</th>
                    <th>PostCode</th>
                    <th>Keyword</th>
                    <th>ProductName</th>
                    <th>Source</th>
                    <th>LeadStatus</th>
                    <th>CreatedOn</th>
                    <th>TransferredOn</th>
                    <th>TransferredTo</th>
                    <th>Price</th>
                    <th>PriceType</th>
                    <th>Home Phone</th>
                    <th>Email</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var val in Model.Lead)
                {
                    <tr>
                        <td>@val.commonleadID </td>
                        <td>@val.WebsiteName</td>
                        <td>@val.FullName</td>
                        <td>@val.PostCode</td>
                        <td>@val.Keyword</td>
                        <td>@val.ProductName</td>
                        <td>@val.Source </td>
                        <td>@val.LeadStatus</td>
                        <td>@val.CreatedOn</td>
                        <td>@val.TransferlogTransferredOn</td>
                        <td>@val.BuyerName</td>
                        <td>@val.TransferlogPrice</td>
                        <td>@val.TransferlogIsActualPrice</td>
                        <td>@val.HomePhone</td>
                        <td>@val.Email</td>
                    </tr>
                }
            </tbody>


        </table>
    </div>
</div>

